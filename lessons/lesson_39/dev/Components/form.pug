mixin form()
  .form__wrapper#contact
    .container
      +title-line({
          class: 'form__title',
          title: 'GET IN TOUCH'
        })
      .form__block
        .form__block-left
          .form__contacts
            .form__svg
              img(alt="location-svg" src='./assets/location-dot-solid.svg')
            .form__contacts-contact
              span 91 Nolan Extensions Suite 670
          .form__contacts    
            .form__svg
              img(alt="phone-svg" src='./assets/phone-solid.svg')
            .form__svg-content
              span +001 356-868-2454
          .form__contacts    
            .form__svg
              img(alt="inbox-svg" src='./assets/inbox-solid.svg')
            .form__svg-content
              span montichello@service.com
          .form__contacts    
            .form__svg
              img(alt="clock-svg" src='./assets/clock-solid.svg')
            .form__svg-content
              span From 07:05AM to 19:30PM
        .form__block-right
          <div class="form__item form__item-fullname">
            <label for="username" class="form-label"></label>
            <input type="text" class="form-input" name="username" id="username">
            <!-- <span class="form-error hidden">Error message!!!</span> -->
          </div>
          <div class="form__item-email">
            <label for="email" class="form-label"></label>
            <input type="email" class="form-input" name="email" id="email" placeholder="Email">
            <!-- <span class="form-error hidden">Error message!!!</span> -->
          </div>
          .form__wrapper-button
            +button({
              class: 'form__button',
              text: 'SUBMIT'
              }) 
    