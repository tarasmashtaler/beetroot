mixin project-item(args)
  .project__block
    .project__block-left
      img(alt="project-image" src="./assets/"+args.img)
    .project__block-right
      h4= args.subtitle
      h2= args.title
      div(class="project__text")= args.text
      button(type='button' class="project__button")
        span MORE DETAILS
      +project-location({
        place: '',
        content: args.location
      })  